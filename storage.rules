rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profile_images/{imageName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && imageName == request.auth.uid + ".png";
    }
    match /chats_images/{offerId}/{uid}/{imageName} {
    	allow read: if false;
      allow create: if request.auth != null && request.auth.uid == uid && imageName.matches(".+\\.png");
    }
  }
}
